{% comment %} Giant Hoodies Category Tiles - Visual category grid {% endcomment %}

<div
  class="category-tiles section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-padding', settings: section.settings %}"
>
  {% if section.settings.heading != blank %}
    <h2 class="category-tiles__heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="category-tiles__grid">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="category-tiles__tile" {{ block.shopify_attributes }}>
        <div class="category-tiles__image-wrapper">
          {% if block.settings.image != blank %}
            {{ block.settings.image | image_url: width: 600 | image_tag: class: 'category-tiles__image', alt: block.settings.title }}
          {% else %}
            <div class="category-tiles__placeholder"></div>
          {% endif %}
        </div>
        <div class="category-tiles__overlay">
          <span class="category-tiles__title">{{ block.settings.title }}</span>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  .category-tiles {
    padding-left: 20px;
    padding-right: 20px;
  }

  .category-tiles__heading {
    font-family: var(--gh-font-heading);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 900;
    font-variation-settings: 'SOFT' 100, 'WONK' 1;
    text-align: center;
    margin-bottom: 32px;
    color: var(--color-foreground);
  }

  .category-tiles__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .category-tiles__tile {
    position: relative;
    aspect-ratio: 1;
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .category-tiles__tile:hover {
    transform: scale(1.02);
  }

  .category-tiles__image-wrapper {
    position: absolute;
    inset: 0;
  }

  .category-tiles__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .category-tiles__placeholder {
    width: 100%;
    height: 100%;
    min-height: 200px;
    background: linear-gradient(135deg, var(--color-sand) 0%, var(--color-cream) 100%);
  }

  .category-tiles__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6) 0%, transparent 50%);
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding: 20px;
  }

  .category-tiles__title {
    font-family: var(--gh-font-heading);
    font-size: 1.25rem;
    font-weight: 900;
    font-variation-settings: 'SOFT' 100, 'WONK' 1;
    color: var(--color-white);
    text-align: center;
  }

  @media screen and (max-width: 989px) {
    .category-tiles__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
    }
  }

  @media screen and (max-width: 749px) {
    .category-tiles__grid {
      gap: 8px;
    }

    .category-tiles__tile {
      border-radius: 12px;
    }

    .category-tiles__title {
      font-size: 1rem;
    }

    .category-tiles__overlay {
      padding: 12px;
    }
  }
{% endstylesheet %}

