{%- liquid
  assign word_count = article.content | strip_html | split: ' ' | size
  assign reading_minutes = word_count | divided_by: 200
  if reading_minutes < 1
    assign reading_minutes = 1
  endif
-%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="section color-{{ section.settings.color_scheme }}">
  <div
    class="
      spacing-style
      layout-panel-flex
      layout-panel-flex--column
      section-content-wrapper
      mobile-column
    "
    style="
      {% render 'layout-panel-style', settings: section.settings %}
      {% render 'spacing-style', settings: section.settings %}
    "
  >
    {%- comment -%} 4a. Back-to-blog breadcrumb navigation {%- endcomment -%}
    <nav class="article-breadcrumb" aria-label="Breadcrumb">
      <a href="{{ blog.url }}">{{ 'blogs.article.back_to_blog' | t: blog_title: blog.title }}</a>
    </nav>

    <header>
      {%- content_for 'block', id: 'blog-post-title', type: 'text' %}
      {%- content_for 'block', id: 'blog-post-details', type: '_blog-post-info-text' %}
      {%- comment -%} 4b. Reading time â€” styled to match blog-post-details row {%- endcomment -%}
      <div class="blog-post-details justify-center article-reading-time">
        <span>{{ 'content.blog_details_separator' | t }}</span>
        <span>{{ 'blogs.article.reading_time' | t: minutes: reading_minutes }}</span>
      </div>
    </header>

    {%- if article.image -%}
      {%- content_for 'block', id: 'blog-post-image', type: '_blog-post-featured-image' %}
    {%- endif -%}
    {%- content_for 'block', id: 'blog-post-content', type: '_blog-post-content' %}

    {%- comment -%} 4c. Tag navigation {%- endcomment -%}
    {%- if article.tags.size > 0 -%}
      <div class="article-tags">
        <span class="article-tags__label">{{ 'blogs.article.tags_label' | t }}:</span>
        <div class="article-tags__list">
          {%- for tag in article.tags -%}
            <a href="{{ blog.url }}/tagged/{{ tag | handleize }}" class="article-tags__pill">{{ tag }}</a>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}

    {%- comment -%} 4d. Social sharing {%- endcomment -%}
    {% render 'article-share-buttons', article: article %}

    {%- comment -%} 4f. Author bio (renders only when metafields exist) {%- endcomment -%}
    {%- if article.metafields.custom.author_bio != blank -%}
      <div class="article-author-bio">
        {%- if article.metafields.custom.author_image != blank -%}
          <img
            src="{{ article.metafields.custom.author_image | image_url: width: 120 }}"
            alt="{{ article.author }}"
            class="article-author-bio__image"
            width="60"
            height="60"
            loading="lazy"
          >
        {%- endif -%}
        <div class="article-author-bio__info">
          <span class="article-author-bio__name">{{ article.author }}</span>
          <p class="article-author-bio__text">{{ article.metafields.custom.author_bio }}</p>
        </div>
      </div>
    {%- endif -%}

    {% comment %} Dynamic area for @app blocks only, at the bottom {% endcomment %}
    {% content_for 'blocks' %}

    {% if blog.comments_enabled? %}
      <div class="blog-post-comments-container">
        <h2 class="h3">{{- 'blogs.article.comments_heading' | t: count: article.comments_count -}}</h2>

        <div class="blog-post-comments">
          {% paginate article.comments by 10 %}
            {% for comment in article.comments %}
              <div class="blog-post-comment">
                {{ comment.content }}
                <div class="blog-post-comment__author">
                  <span class="blog-post-comment__author-name">{{- comment.author -}}</span>
                  <span>{{- 'blogs.article.comment_author_separator' | t -}}</span>
                  <span class="blog-post-comment__date">
                    {{- comment.created_at | time_tag: format: 'date' -}}
                  </span>
                </div>
              </div>
            {% endfor %}

            <div class="blog-post-comments-pagination">
              {{- paginate | default_pagination -}}
            </div>
          {% endpaginate %}
        </div>

        {% render 'blog-comment-form', article: article, section_id: section.id %}
      </div>
    {% endif %}

    {%- comment -%} 4e. Related posts {%- endcomment -%}
    {%- assign related_count = 0 -%}
    {%- for post in blog.articles -%}
      {%- if post.id != article.id -%}
        {%- assign related_count = related_count | plus: 1 -%}
      {%- endif -%}
      {%- if related_count >= 3 -%}
        {%- break -%}
      {%- endif -%}
    {%- endfor -%}

    {%- if related_count > 0 -%}
      <div class="article-related-posts">
        <h2 class="h3">{{ 'blogs.article.related_posts_heading' | t }}</h2>
        <div class="article-related-posts__grid">
          {%- assign shown = 0 -%}
          {%- for post in blog.articles -%}
            {%- if post.id != article.id -%}
              <a href="{{ post.url }}" class="article-related-posts__item">
                {%- if post.image -%}
                  <img
                    src="{{ post.image | image_url: width: 600 }}"
                    alt="{{ post.title | escape }}"
                    class="article-related-posts__image"
                    width="300"
                    height="200"
                    loading="lazy"
                  >
                {%- endif -%}
                <span class="article-related-posts__title">{{ post.title }}</span>
              </a>
              {%- assign shown = shown | plus: 1 -%}
              {%- if shown >= 3 -%}
                {%- break -%}
              {%- endif -%}
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

{%- comment -%} 3. Enhanced Article JSON-LD schema {%- endcomment -%}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Article",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ shop.url }}{{ article.url }}"
  },
  "headline": {{ article.title | json }},
  "description": {{ article.excerpt_or_content | strip_html | truncate: 160 | json }},
  {%- if article.image -%}
  "image": {
    "@type": "ImageObject",
    "url": "{{ article.image | image_url: width: 1200 }}",
    "width": {{ article.image.width }},
    "height": {{ article.image.height }}
  },
  {%- endif -%}
  "author": {
    "@type": "Person",
    "name": {{ article.author | json }}
  },
  "publisher": {
    "@type": "Organization",
    "name": {{ shop.name | json }},
    "url": "{{ shop.url }}"
    {%- if shop.brand.logo -%}
    ,"logo": {
      "@type": "ImageObject",
      "url": "{{ shop.brand.logo | image_url: width: 600 }}"
    }
    {%- endif -%}
  },
  "datePublished": "{{ article.published_at | date: '%Y-%m-%dT%H:%M:%S%z' }}",
  "dateModified": "{{ article.updated_at | date: '%Y-%m-%dT%H:%M:%S%z' }}",
  "articleSection": {{ blog.title | json }},
  {%- if article.tags.size > 0 -%}
  "keywords": {{ article.tags | json }},
  {%- endif -%}
  "wordCount": {{ word_count }},
  "speakable": {
    "@type": "SpeakableSpecification",
    "cssSelector": [".blog-post-content h1", ".blog-post-content h2", ".blog-post-content p:first-of-type"]
  },
  "isAccessibleForFree": true
}
</script>

{% stylesheet %}
  .article-breadcrumb {
    width: 100%;
    max-width: var(--normal-content-width);
    margin: 0 auto;
    text-align: center;
  }

  .article-breadcrumb a {
    font-size: var(--font-paragraph-size);
    color: rgb(var(--color-foreground-rgb) / var(--opacity-subdued-text));
    text-decoration: none;
  }

  .article-breadcrumb a:hover {
    color: var(--color-foreground);
  }

  .article-reading-time {
    margin-top: 0;
    padding-top: 0;
  }

  .article-tags {
    width: 100%;
    max-width: var(--normal-content-width);
    margin: var(--margin-lg) auto 0;
    display: flex;
    align-items: center;
    gap: var(--gap-xs);
    flex-wrap: wrap;
  }

  .article-tags__label {
    font-size: var(--font-size--body-sm);
    color: rgb(var(--color-foreground-rgb) / var(--opacity-subdued-text));
  }

  .article-tags__list {
    display: flex;
    gap: var(--gap-2xs);
    flex-wrap: wrap;
  }

  .article-tags__pill {
    display: inline-block;
    padding: var(--padding-2xs) var(--padding-sm);
    border: 1px solid rgb(var(--color-foreground-rgb) / var(--opacity-20));
    border-radius: 9999px;
    font-size: var(--font-size--body-sm);
    color: var(--color-foreground);
    text-decoration: none;
    transition: background-color 0.2s, border-color 0.2s;
  }

  .article-tags__pill:hover {
    background-color: rgb(var(--color-foreground-rgb) / 0.05);
    border-color: var(--color-foreground);
  }

  .article-share {
    width: 100%;
    max-width: var(--normal-content-width);
    margin: var(--margin-lg) auto 0;
    display: flex;
    align-items: center;
    gap: var(--gap-sm);
  }

  .article-share__label {
    font-size: var(--font-size--body-sm);
    color: rgb(var(--color-foreground-rgb) / var(--opacity-subdued-text));
  }

  .article-share__buttons {
    display: flex;
    gap: var(--gap-xs);
  }

  .article-share__button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 1px solid rgb(var(--color-foreground-rgb) / var(--opacity-20));
    color: var(--color-foreground);
    text-decoration: none;
    transition: background-color 0.2s, border-color 0.2s;
  }

  .article-share__button:hover {
    background-color: rgb(var(--color-foreground-rgb) / 0.05);
    border-color: var(--color-foreground);
  }

  .article-author-bio {
    width: 100%;
    max-width: var(--normal-content-width);
    margin: var(--margin-xl) auto 0;
    display: flex;
    align-items: flex-start;
    gap: var(--gap-md);
    padding: var(--padding-md);
    border: 1px solid rgb(var(--color-foreground-rgb) / var(--opacity-20));
    border-radius: 8px;
  }

  .article-author-bio__image {
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
  }

  .article-author-bio__name {
    font-weight: 600;
    display: block;
    margin-bottom: var(--margin-2xs);
  }

  .article-author-bio__text {
    font-size: var(--font-size--body-sm);
    color: rgb(var(--color-foreground-rgb) / var(--opacity-subdued-text));
    margin: 0;
  }

  .article-related-posts {
    width: 100%;
    max-width: var(--normal-content-width);
    margin: var(--margin-2xl) auto 0;
  }

  .article-related-posts__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--gap-lg);
    margin-top: var(--margin-md);
  }

  @media screen and (max-width: 749px) {
    .article-related-posts__grid {
      grid-template-columns: 1fr;
    }
  }

  .article-related-posts__item {
    text-decoration: none;
    color: var(--color-foreground);
  }

  .article-related-posts__image {
    width: 100%;
    height: auto;
    aspect-ratio: 3 / 2;
    object-fit: cover;
    border-radius: 4px;
  }

  .article-related-posts__title {
    display: block;
    margin-top: var(--margin-xs);
    font-weight: 600;
  }

  .article-related-posts__item:hover .article-related-posts__title {
    text-decoration: underline;
  }

  .blog-post-comments-container {
    width: 100%;
    max-width: var(--normal-content-width);
    margin: 0 auto;
  }

  .blog-post-comments {
    display: flex;
    flex-direction: column;
    gap: var(--gap-3xl);
  }

  .blog-post-comment__author {
    display: flex;
    align-items: center;
    gap: var(--gap-2xs);
    margin-top: var(--margin-md);
    font-size: var(--font-size--body-sm);
    color: rgb(var(--color-foreground-rgb) / var(--opacity-subdued-text));
  }

  .blog-post-comments-pagination {
    display: flex;
    justify-content: center;
    gap: var(--gap-2xs);
  }

  .blog-post-comments-pagination,
  .blog-post-comments-pagination a {
    color: var(--color-foreground);
  }

  .blog-post-comments-pagination .current {
    color: var(--color-foreground);
  }

  .blog-post-comments-pagination .current,
  .blog-post-comments-pagination a {
    display: block;
    padding: var(--padding-2xs) var(--padding-xs);
  }

  .blog-post-comments-pagination .current,
  .blog-post-comments-pagination a:hover {
    border-bottom: 1px solid var(--color-foreground);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:names.blog_post",
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    }
  ],
  "class": "section-wrapper",
  "settings": [
    {
      "type": "select",
      "id": "content_direction",
      "label": "t:settings.direction",
      "options": [
        {
          "value": "column",
          "label": "t:options.vertical"
        }
      ],
      "default": "column",
      "visible_if": "{{ section.settings.gap < 0 }}"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:settings.gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": []
}
{% endschema %}
