{% comment %} Giant Hoodies Comparison Table - Block-driven, editable from theme editor {% endcomment %}

<div
  class="comparison-table section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-padding', settings: section.settings %}"
>
  {% if section.settings.heading != blank %}
    <h2 class="comparison-table__heading">{{ section.settings.heading | escape }}</h2>
  {% endif %}

  <div class="comparison-table__wrapper">
    <table class="comparison-table__table">
      <thead>
        <tr>
          <th scope="col" class="comparison-table__feature-header">Feature</th>
          <th scope="col" class="comparison-table__brand comparison-table__brand--us">
            <span class="comparison-table__brand-name">{{ section.settings.brand_us | escape }}</span>
          </th>
          <th scope="col" class="comparison-table__brand comparison-table__brand--them">
            <span class="comparison-table__brand-name">{{ section.settings.brand_them | escape }}</span>
          </th>
        </tr>
      </thead>
      <tbody>
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'feature_row' -%}
              <tr {{ block.shopify_attributes }}>
                <td class="comparison-table__feature">{{ block.settings.feature | escape }}</td>
                <td class="comparison-table__check comparison-table__check--{{ block.settings.us_value }}">
                  {%- if block.settings.us_value == 'check' -%}
                    <span class="comparison-table__icon comparison-table__icon--check" aria-label="Yes">✓</span>
                  {%- elsif block.settings.us_value == 'x' -%}
                    <span class="comparison-table__icon comparison-table__icon--x" aria-label="No">✗</span>
                  {%- else -%}
                    <span class="comparison-table__icon">{{ block.settings.us_custom | escape }}</span>
                  {%- endif -%}
                </td>
                <td class="comparison-table__check comparison-table__check--{{ block.settings.them_value }}">
                  {%- if block.settings.them_value == 'check' -%}
                    <span class="comparison-table__icon comparison-table__icon--check" aria-label="Yes">✓</span>
                  {%- elsif block.settings.them_value == 'x' -%}
                    <span class="comparison-table__icon comparison-table__icon--x" aria-label="No">✗</span>
                  {%- else -%}
                    <span class="comparison-table__icon">{{ block.settings.them_custom | escape }}</span>
                  {%- endif -%}
                </td>
              </tr>
            {%- when 'price_row' -%}
              <tr class="comparison-table__row--price" {{ block.shopify_attributes }}>
                <td class="comparison-table__feature">Price</td>
                <td class="comparison-table__price comparison-table__price--us">
                  <span class="comparison-table__price-value">
                    {%- if section.settings.pricing_product != blank -%}
                      {{ section.settings.pricing_product.price | money_without_trailing_zeros }}
                    {%- else -%}
                      {{ block.settings.us_price | escape }}
                    {%- endif -%}
                  </span>
                </td>
                <td class="comparison-table__price comparison-table__price--them">
                  <span class="comparison-table__price-value">{{ block.settings.them_price | escape }}</span>
                </td>
              </tr>
          {%- endcase -%}
        {%- endfor -%}
      </tbody>
    </table>
  </div>

</div>

{% stylesheet %}
  .comparison-table {
    text-align: center;
    content-visibility: auto;
    contain-intrinsic-size: auto 500px;
  }

  .comparison-table__heading {
    font-family: var(--gh-font-heading);
    font-size: var(--font-size--h1);
    font-weight: 900;
    font-variation-settings: 'SOFT' 100, 'WONK' 1;
    line-height: var(--line-height--display-tight);
    margin-bottom: 48px;
    color: var(--color-foreground);
  }

  .comparison-table__wrapper {
    overflow-x: auto;
    margin-bottom: 48px;
  }

  .comparison-table__table {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    border-collapse: collapse;
    text-align: left;
  }

  .comparison-table__table th,
  .comparison-table__table td {
    padding: 16px 20px;
    border-bottom: 1px solid rgba(var(--color-foreground-rgb), 0.1);
  }

  .comparison-table__table thead th {
    font-family: var(--gh-font-body);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding-bottom: 20px;
  }

  .comparison-table__feature-header {
    width: 50%;
  }

  .comparison-table__brand {
    text-align: center;
    width: 25%;
  }

  .comparison-table__brand--us .comparison-table__brand-name {
    color: var(--color-terracotta);
  }

  .comparison-table__feature {
    font-family: var(--gh-font-body);
    font-size: 1rem;
    color: var(--color-foreground);
  }

  .comparison-table__check {
    text-align: center;
  }

  .comparison-table__icon {
    display: inline-flex;
    width: 24px;
    height: 24px;
  }

  .comparison-table__icon svg {
    width: 100%;
    height: 100%;
  }

  .comparison-table__icon--check {
    color: #22c55e;
  }

  .comparison-table__icon--x {
    color: #ef4444;
  }

  .comparison-table__row--price td {
    border-bottom: none;
    padding-top: 24px;
  }

  .comparison-table__price {
    text-align: center;
  }

  .comparison-table__price-value {
    font-family: var(--gh-font-heading);
    font-size: 1.5rem;
    font-weight: 900;
    font-variation-settings: 'SOFT' 100, 'WONK' 1;
  }

  .comparison-table__price--us .comparison-table__price-value {
    color: var(--color-terracotta);
  }

  .comparison-table__price--them .comparison-table__price-value {
    color: var(--color-foreground);
    opacity: 0.5;
    text-decoration: line-through;
  }

  @media screen and (max-width: 749px) {
    .comparison-table__table th,
    .comparison-table__table td {
      padding: 12px 8px;
      font-size: 0.875rem;
    }

    .comparison-table__feature-header {
      width: 45%;
    }

    .comparison-table__brand {
      width: 27.5%;
    }

    .comparison-table__icon {
      width: 20px;
      height: 20px;
    }

    .comparison-table__price-value {
      font-size: 1.25rem;
    }
  }
{% endstylesheet %}

