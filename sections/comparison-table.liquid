            { "value": "x", "label": "✗ No" },
            { "value": "custom", "label": "Custom text" }
          ],
          "default": "x"
        },
        {
          "type": "text",
          "id": "them_custom",
          "label": "Them custom text",
          "info": "Only used when \"Them\" is set to Custom text"
        }
      ]
    },
    {
      "type": "price_row",
      "name": "Price Row",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "us_price",
          "label": "Our price",
          "default": "$55"
        },
        {
          "type": "text",
          "id": "them_price",
          "label": "Their price",
          "default": "$129"
        }
