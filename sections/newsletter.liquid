{% comment %} Giant Hoodies Newsletter Signup - "Join the Hoodie Fam" {% endcomment %}

<div
  class="newsletter section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-padding', settings: section.settings %}"
>
  <div class="newsletter__container">
    {% if section.settings.heading != blank %}
      <h2 class="newsletter__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.body != blank %}
      <p class="newsletter__body">{{ section.settings.body }}</p>
    {% endif %}

    {% form 'customer', class: 'newsletter__form' %}
      <input type="hidden" name="contact[tags]" value="newsletter">

      <div class="newsletter__field-group">
        <div class="newsletter__field">
          <input
            type="email"
            name="contact[email]"
            id="newsletter-email-{{ section.id }}"
            class="newsletter__input"
            placeholder="Enter your email"
            required
            autocomplete="email"
            autocorrect="off"
            autocapitalize="off"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="newsletter-error-{{ section.id }}"
            {% elsif form.posted_successfully? %}
              aria-describedby="newsletter-success-{{ section.id }}"
            {% endif %}
          >
          <label for="newsletter-email-{{ section.id }}" class="visually-hidden">
            {{ 'Email' }}
          </label>
        </div>
        <button type="submit" class="newsletter__button button button-primary">
          {{ section.settings.cta_text | default: 'Subscribe' }}
        </button>
      </div>

      {% if form.errors %}
        <p id="newsletter-error-{{ section.id }}" class="newsletter__message newsletter__message--error">
          {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
        </p>
      {% endif %}

      {% if form.posted_successfully? %}
        <p id="newsletter-success-{{ section.id }}" class="newsletter__message newsletter__message--success">
          {{ section.settings.success_message | default: "You're in! Check your email for your 10% off code" }}
        </p>
      {% endif %}
    {% endform %}

    {% if section.settings.disclaimer != blank %}
      <p class="newsletter__disclaimer">{{ section.settings.disclaimer }}</p>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .newsletter {
    text-align: center;
  }

  .newsletter__container {
    max-width: 560px;
    margin: 0 auto;
  }

  .newsletter__heading {
    font-family: var(--gh-font-heading);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    margin-bottom: 16px;
    color: var(--color-foreground);
  }

  .newsletter__body {
    font-family: var(--gh-font-body);
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--color-foreground);
    opacity: 0.85;
    margin-bottom: 32px;
  }

  .newsletter__form {
    margin-bottom: 16px;
  }

  .newsletter__field-group {
    display: flex;
    gap: 12px;
    max-width: 480px;
    margin: 0 auto;
  }

  .newsletter__field {
    flex: 1;
  }

  .newsletter__input {
    width: 100%;
    height: 52px;
    padding: 0 20px;
    font-family: var(--gh-font-body);
    font-size: 1rem;
    border: 2px solid rgba(var(--color-foreground-rgb), 0.2);
    border-radius: var(--gh-button-radius);
    background: var(--color-background);
    color: var(--color-foreground);
    transition: border-color 0.2s ease;
  }

  .newsletter__input:focus {
    outline: none;
    border-color: var(--gh-terracotta);
  }

  .newsletter__input::placeholder {
    color: var(--color-foreground);
    opacity: 0.5;
  }

  .newsletter__button {
    flex-shrink: 0;
    height: 52px;
    padding: 0 32px;
  }

  .newsletter__message {
    font-family: var(--gh-font-body);
    font-size: 0.9375rem;
    margin-top: 16px;
  }

  .newsletter__message--success {
    color: #22c55e;
  }

  .newsletter__message--error {
    color: #ef4444;
  }

  .newsletter__disclaimer {
    font-family: var(--gh-font-body);
    font-size: 0.75rem;
    color: var(--color-foreground);
    opacity: 0.5;
    margin-top: 16px;
  }

  @media screen and (max-width: 749px) {
    .newsletter__field-group {
      flex-direction: column;
    }

    .newsletter__button {
      width: 100%;
    }

    .newsletter__body {
      font-size: 1rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Join the Hoodie Fam"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body text",
      "default": "Get exclusive deals, new drops, and cozy content. No spam, just good stuff."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button text",
      "default": "Subscribe & Save 10%"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success message",
      "default": "You're in! Check your email for your 10% off code"
    },
    {
      "type": "text",
      "id": "disclaimer",
      "label": "Disclaimer text",
      "default": " "
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        { "value": "page-width", "label": "Page width" },
        { "value": "full-width", "label": "Full width" }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-5"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}
