{%- comment -%}
  Customer testimonials section.
  Displays a grid of customer quotes below the product.
{%- endcomment -%}

<section class="product-testimonials">
  <h2 class="product-testimonials__title">{{ section.settings.heading }}</h2>

  <div class="product-testimonials__grid">
    {%- for block in section.blocks -%}
      <blockquote class="product-testimonials__card" {{ block.shopify_attributes }}>
        <p class="product-testimonials__quote">"{{ block.settings.quote }}"</p>
        <cite class="product-testimonials__author">&mdash; {{ block.settings.author }}</cite>
      </blockquote>
    {%- endfor -%}
  </div>
</section>

{% stylesheet %}
  .product-testimonials {
    padding: 48px 20px;
  }

  .product-testimonials__title {
    font-family: var(--gh-font-heading, 'Fraunces', serif);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--gh-espresso, #3d3028);
    text-align: center;
    margin: 0 0 32px 0;
  }

  .product-testimonials__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
    max-width: 800px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .product-testimonials__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .product-testimonials__card {
    background: var(--gh-cream, #faf7f4);
    padding: 24px;
    border-radius: 16px;
    margin: 0;
  }

  .product-testimonials__quote {
    font-family: var(--gh-font-body, 'DM Sans', sans-serif);
    font-size: 1rem;
    font-style: italic;
    line-height: 1.6;
    color: var(--gh-espresso, #3d3028);
    margin: 0 0 12px 0;
  }

  .product-testimonials__author {
    font-family: var(--gh-font-body, 'DM Sans', sans-serif);
    font-size: 0.85rem;
    font-style: normal;
    font-weight: 600;
    color: var(--gh-espresso-light, #5a4a3d);
  }
{% endstylesheet %}

