{% comment %} Giant Hoodies Feature: OVERSIZED - Body diversity photo grid {% endcomment %}

<div
  class="feature-oversized section section--full-width color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-padding', settings: section.settings %}"
>
  <div class="feature-oversized__header">
    <h2 class="feature-oversized__heading">One Size Fits Most</h2>
    <p class="feature-oversized__subtext">From Small to 3XL, our one size has you covered.</p>
  </div>

  <div class="feature-oversized__grid">
    {%- assign image_keys = 'image_1,image_2,image_3,image_4,image_5,image_6' | split: ',' -%}
    {%- assign alt_texts = 'Giant Hoodie on size S body,Giant Hoodie on size M body,Giant Hoodie on size L body,Giant Hoodie on size XL body,Giant Hoodie on size 2XL body,Giant Hoodie on size 3XL body' | split: ',' -%}
    {%- assign placeholders = 'product-apparel-1,product-apparel-2,product-apparel-3,product-apparel-1,product-apparel-2,product-apparel-3' | split: ',' -%}

    {%- for key in image_keys -%}
      {%- if section.settings[key] != blank -%}
        {{ section.settings[key] | image_url: width: 600 | image_tag:
            class: 'feature-oversized__img',
            alt: alt_texts[forloop.index0],
            loading: 'lazy',
            widths: '200, 300, 400, 600',
            sizes: '(min-width: 990px) 233px, (min-width: 750px) 33vw, 50vw'
        }}
      {%- else -%}
        <div class="feature-oversized__placeholder">
          {{ placeholders[forloop.index0] | placeholder_svg_tag: 'feature-oversized__placeholder-svg' }}
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>

{% stylesheet %}
  .feature-oversized {
    text-align: center;
    padding-left: 20px;
    padding-right: 20px;
    margin-top: 20px;
  }

  .feature-oversized__header {
    max-width: 600px;
    margin: 0 auto 48px;
  }

  .feature-oversized__heading {
    font-family: var(--gh-font-heading);
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 900;
    font-variation-settings: 'SOFT' 100, 'WONK' 1;
    line-height: 1.1;
    margin-bottom: 16px;
    color: var(--color-foreground);
  }

  .feature-oversized__subtext {
    font-family: var(--gh-font-body);
    font-size: 1.25rem;
    color: var(--color-foreground);
    opacity: 0.7;
  }

  .feature-oversized__grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 8px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .feature-oversized__img,
  .feature-oversized__placeholder {
    aspect-ratio: 3 / 4;
    width: 100%;
    object-fit: cover;
    border-radius: 12px;
  }

  .feature-oversized__placeholder {
    background: linear-gradient(135deg, #e8d5c4 0%, #faf7f4 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .feature-oversized__placeholder-svg {
    width: 100%;
    height: 100%;
    opacity: 0.6;
  }

  @media screen and (max-width: 989px) {
    .feature-oversized__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .feature-oversized__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 4px;
    }

    .feature-oversized__img,
    .feature-oversized__placeholder {
      border-radius: 8px;
    }
  }
{% endstylesheet %}

