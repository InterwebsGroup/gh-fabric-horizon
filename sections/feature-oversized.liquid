{% comment %} Giant Hoodies Feature: OVERSIZED - Body diversity photo grid {% endcomment %}

<div
  class="feature-oversized section section--full-width color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-padding', settings: section.settings %}"
>
  <div class="feature-oversized__header">
    <p class="feature-oversized__eyebrow">One Size Fits Most</p>
    <h2 class="feature-oversized__heading">One Size. Every Body.</h2>
    <p class="feature-oversized__subtext">Fits XS to 3XL comfortably</p>
  </div>

  <div class="feature-oversized__grid">
    {% if section.settings.image_1 != blank %}
      {{ section.settings.image_1 | image_url: width: 600 | image_tag: class: 'feature-oversized__img', alt: 'Giant Hoodie on different body type' }}
    {% else %}
      <div class="feature-oversized__placeholder">
