{% stylesheet %}
  .feature-oversized {
    text-align: center;
    padding-left: 20px;
    padding-right: 20px;
  }

  .feature-oversized__header {
    max-width: 600px;
    margin: 0 auto 48px;
  }

  .feature-oversized__eyebrow {
    font-family: var(--gh-font-body);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--gh-terracotta);
    margin-bottom: 16px;
  }

  .feature-oversized__heading {
    font-family: var(--gh-font-heading);
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 600;
    line-height: 1.1;
    margin-bottom: 16px;
    color: var(--color-foreground);
  }

  .feature-oversized__subtext {
    font-family: var(--gh-font-body);
    font-size: 1.25rem;
    color: var(--color-foreground);
    opacity: 0.7;
  }

  .feature-oversized__grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 8px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .feature-oversized__img,
  .feature-oversized__placeholder {
    aspect-ratio: 3 / 4;
    width: 100%;
    object-fit: cover;
    border-radius: 12px;
  }

  .feature-oversized__placeholder {
    background: linear-gradient(135deg, #e8d5c4 0%, #faf7f4 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .feature-oversized__placeholder-svg {
    width: 100%;
    height: 100%;
    opacity: 0.6;
  }

  @media screen and (max-width: 989px) {
    .feature-oversized__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .feature-oversized__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 4px;
    }

    .feature-oversized__img,
    .feature-oversized__placeholder {
      border-radius: 8px;
    }
  }
{% endstylesheet %}

