{% comment %} Giant Hoodies Feature: TRENDY - Lifestyle photo collage {% endcomment %}

<div
  class="feature-trendy section section--full-width color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-padding', settings: section.settings %}"
>
  <div class="feature-trendy__header">
    <p class="feature-trendy__eyebrow">Wear It Everywhere</p>
    <h2 class="feature-trendy__heading">Your Hoodie for Everything</h2>
  </div>

  <div class="feature-trendy__collage">
    {%- assign image_keys = 'image_main,image_2,image_3,image_4,image_5' | split: ',' -%}
    {%- assign label_keys = 'label_main,label_2,label_3,label_4,label_5' | split: ',' -%}
    {%- assign alt_texts = 'Giant Hoodie on the couch,Giant Hoodie at the airport,Giant Hoodie at a coffee shop,Giant Hoodie running errands,Giant Hoodie on movie night' | split: ',' -%}
    {%- assign placeholders = 'lifestyle-1,lifestyle-2,collection-1,collection-2,collection-3' | split: ',' -%}

    {%- for key in image_keys -%}
      {%- if forloop.first -%}
        {%- assign item_class = 'feature-trendy__item feature-trendy__item--large' -%}
        {%- assign img_width = 800 -%}
        {%- assign img_widths = '400, 600, 800, 1200' -%}
        {%- assign img_sizes = '(min-width: 750px) 600px, 100vw' -%}
      {%- else -%}
        {%- assign item_class = 'feature-trendy__item' -%}
        {%- assign img_width = 500 -%}
        {%- assign img_widths = '200, 300, 400, 600' -%}
        {%- assign img_sizes = '(min-width: 750px) 300px, 50vw' -%}
      {%- endif -%}

      <div class="{{ item_class }}">
        {%- if section.settings[key] != blank -%}
          {{ section.settings[key] | image_url: width: img_width | image_tag:
              class: 'feature-trendy__img',
              alt: alt_texts[forloop.index0],
              loading: 'lazy',
              widths: img_widths,
              sizes: img_sizes
          }}
        {%- else -%}
          <div class="feature-trendy__placeholder">
            {{ placeholders[forloop.index0] | placeholder_svg_tag: 'feature-trendy__placeholder-svg' }}
          </div>
        {%- endif -%}
        <div class="feature-trendy__label">{{ section.settings[label_keys[forloop.index0]] }}</div>
      </div>
    {%- endfor -%}
  </div>

</div>

{% stylesheet %}
  .feature-trendy {
    text-align: center;
    padding-left: 20px;
    padding-right: 20px;
  }

  .feature-trendy__header {
    max-width: 600px;
    margin: 0 auto 48px;
  }

  .feature-trendy__eyebrow {
    font-family: var(--gh-font-body);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-terracotta);
    margin-bottom: 16px;
  }

  .feature-trendy__heading {
    font-family: var(--gh-font-heading);
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 900;
    font-variation-settings: 'SOFT' 100, 'WONK' 1;
    line-height: 1.1;
    color: var(--color-foreground);
  }

  .feature-trendy__collage {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: 8px;
    max-width: 1200px;
    margin: 0 auto 32px;
    aspect-ratio: 2 / 1;
  }

  .feature-trendy__item {
    position: relative;
    overflow: hidden;
    border-radius: 12px;
  }

  .feature-trendy__item--large {
    grid-column: span 2;
    grid-row: span 2;
  }

  .feature-trendy__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .feature-trendy__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #e8d5c4 0%, #faf7f4 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .feature-trendy__placeholder-svg {
    width: 100%;
    height: 100%;
    opacity: 0.5;
  }

  .feature-trendy__label {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 16px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6) 0%, transparent 100%);
    font-family: var(--gh-font-body);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #fff;
    text-align: center;
  }


  @media screen and (max-width: 749px) {
    .feature-trendy__collage {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: auto;
      aspect-ratio: auto;
    }

    .feature-trendy__item--large {
      grid-column: span 2;
      grid-row: span 1;
      aspect-ratio: 16 / 9;
    }

    .feature-trendy__item:not(.feature-trendy__item--large) {
      aspect-ratio: 1;
    }

    .feature-trendy__item {
      border-radius: 8px;
    }

  }
{% endstylesheet %}

