{%- comment -%}
  Product description section.
  Renders the Shopify product description with themed typography.
  Supports [[CUSTOMER_COUNT]] placeholder â€” replaced with the sitewide
  happy-customers-count theme setting (e.g. "225,000+").
{%- endcomment -%}

{%- liquid
  assign customer_count = settings.happy_customers_count | default: '225,000+'
-%}

{%- if product.description != blank -%}
  <section class="product-description">
    {%- if section.settings.heading != blank -%}
      <h2 class="product-description__heading">{{ section.settings.heading | escape }}</h2>
    {%- endif -%}
    <div class="product-description__body rte">
      {{ product.description | replace: '[[CUSTOMER_COUNT]]', customer_count }}
    </div>
  </section>
{%- endif -%}

{% stylesheet %}
  .product-description {
    max-width: 900px;
    margin: 0 auto;
    padding: 60px var(--page-margin, 16px);
  }

  @media (min-width: 768px) {
    .product-description {
      padding: 60px var(--page-margin, 40px);
    }
  }

  .product-description__heading {
    font-family: var(--gh-font-heading, 'Fraunces', serif);
    font-size: var(--font-size--h1);
    font-weight: 900;
    font-variation-settings: 'SOFT' 100, 'WONK' 1;
    color: var(--color-espresso, #3d3028);
    margin: 0 0 24px 0;
    line-height: 1.2;
  }

  .product-description__body {
    font-family: var(--gh-font-body, 'DM Sans', sans-serif);
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-espresso, #3d3028);
  }

  .product-description__body p {
    margin: 0 0 16px 0;
  }

  .product-description__body p:last-child {
    margin-bottom: 0;
  }

  .product-description__body ul,
  .product-description__body ol {
    padding-left: 24px;
    margin: 0 0 16px 0;
  }

  .product-description__body li {
    margin-bottom: 8px;
  }

  .product-description__body h1,
  .product-description__body h2,
  .product-description__body h3,
  .product-description__body h4,
  .product-description__body h5,
  .product-description__body h6 {
    font-family: var(--gh-font-heading, 'Fraunces', serif);
    font-weight: 900;
    font-variation-settings: 'SOFT' 100, 'WONK' 1;
    color: var(--color-espresso, #3d3028);
    margin: 24px 0 12px 0;
  }

  .product-description__body a {
    color: var(--color-terracotta, #c4704b);
    text-decoration: underline;
  }

  .product-description__body img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "GH Product Description",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading"
    }
  ],
  "presets": [
    {
      "name": "GH Product Description",
      "category": "Giant Hoodies"
    }
  ]
}
{% endschema %}
