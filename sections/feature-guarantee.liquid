{% comment %} Giant Hoodies Feature: GUARANTEE - Trust/objection killer {% endcomment %}

<div
  class="feature-guarantee section section--full-width color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-padding', settings: section.settings %}"
>
  <div class="feature-guarantee__container">
    <div class="feature-guarantee__stat">
      <p class="feature-guarantee__stat-number">{{ section.settings.stat_number | escape }}</p>
      <p class="feature-guarantee__stat-label">{{ section.settings.stat_label | escape }}</p>
    </div>

    <p class="feature-guarantee__comparison">{{ section.settings.comparison_text | escape }}</p>

    <div class="feature-guarantee__process">
      <div class="feature-guarantee__step">
        <div class="feature-guarantee__step-icon">1</div>
        <p class="feature-guarantee__step-title">{{ section.settings.step_1_title | escape }}</p>
        <p class="feature-guarantee__step-desc">{{ section.settings.step_1_desc | escape }}</p>
      </div>
      <div class="feature-guarantee__arrow">→</div>
      <div class="feature-guarantee__step">
        <div class="feature-guarantee__step-icon">2</div>
        <p class="feature-guarantee__step-title">{{ section.settings.step_2_title | escape }}</p>
        <p class="feature-guarantee__step-desc">{{ section.settings.step_2_desc | escape }}</p>
      </div>
      <div class="feature-guarantee__arrow">→</div>
      <div class="feature-guarantee__step">
        <div class="feature-guarantee__step-icon">3</div>
        <p class="feature-guarantee__step-title">{{ section.settings.step_3_title | escape }}</p>
        <p class="feature-guarantee__step-desc">{{ section.settings.step_3_desc | escape }}</p>
      </div>
    </div>

    <div class="feature-guarantee__badge">
      <span class="feature-guarantee__badge-text">{{ section.settings.badge_text | escape }}</span>
    </div>
  </div>
</div>

{% stylesheet %}
  .feature-guarantee {
    text-align: center;
    padding-block: var(--padding-block-start) var(--padding-block-end);
    padding-left: 20px;
    padding-right: 20px;
  }

  .feature-guarantee__container {
    max-width: 900px;
    margin: 0 auto;
  }

  .feature-guarantee__stat {
    margin-bottom: 16px;
  }

  .feature-guarantee__stat-number {
    font-family: var(--gh-font-heading);
    font-size: clamp(4rem, 12vw, 8rem);
    font-weight: 900;
    font-variation-settings: 'SOFT' 100, 'WONK' 1;
    line-height: 1;
    color: var(--color-terracotta);
    margin: 0;
  }

  .feature-guarantee__stat-label {
    font-family: var(--gh-font-heading);
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 900;
    font-variation-settings: 'SOFT' 100, 'WONK' 1;
    color: var(--color-foreground);
    margin: 0;
  }

  .feature-guarantee__comparison {
    font-family: var(--gh-font-body);
    font-size: 1.125rem;
    color: var(--color-foreground);
    opacity: 0.6;
    margin-bottom: 48px;
  }

  .feature-guarantee__process {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: 24px;
    margin-bottom: 48px;
  }

  .feature-guarantee__step {
    flex: 1;
    max-width: 200px;
  }

  .feature-guarantee__step-icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--color-terracotta);
    color: #fff;
    font-family: var(--gh-font-heading);
    font-size: 1.25rem;
    font-weight: 900;
    font-variation-settings: 'SOFT' 100, 'WONK' 1;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 16px;
  }

  .feature-guarantee__step-title {
    font-family: var(--gh-font-heading);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-foreground);
    margin: 0 0 8px;
  }

  .feature-guarantee__step-desc {
    font-family: var(--gh-font-body);
    font-size: 0.9375rem;
    color: var(--color-foreground);
    opacity: 0.7;
    margin: 0;
  }

  .feature-guarantee__arrow {
    font-size: 1.5rem;
    color: var(--color-terracotta);
    opacity: 0.5;
    padding-top: 12px;
  }

  .feature-guarantee__badge {
    display: inline-block;
    background: var(--color-espresso);
    color: var(--color-cream);
    padding: 16px 32px;
    border-radius: 50px;
  }

  .feature-guarantee__badge-text {
    font-family: var(--gh-font-body);
    font-size: 1rem;
    font-weight: 600;
  }

  @media screen and (max-width: 749px) {
    .feature-guarantee__stat {
      margin-bottom: 8px;
    }

    .feature-guarantee__stat-number {
      font-size: clamp(3rem, 12vw, 4rem);
    }

    .feature-guarantee__stat-label {
      font-size: 1.25rem;
    }

    .feature-guarantee__comparison {
      font-size: 0.9375rem;
      margin-bottom: 24px;
    }

    .feature-guarantee__process {
      gap: 12px;
      margin-bottom: 24px;
    }

    .feature-guarantee__arrow {
      display: none;
    }

    .feature-guarantee__step-icon {
      width: 36px;
      height: 36px;
      font-size: 1rem;
      margin-bottom: 8px;
    }

    .feature-guarantee__step-title {
      font-size: 1rem;
      margin-bottom: 0;
    }

    .feature-guarantee__step-desc {
      display: none;
    }

    .feature-guarantee__badge {
      padding: 12px 24px;
    }

    .feature-guarantee__badge-text {
      font-size: 0.875rem;
    }
  }
{% endstylesheet %}

{% schema %}
