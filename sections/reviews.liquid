{% comment %} Giant Hoodies Reviews Section — JudgeMe stats + customer review cards {% endcomment %}

<div
  class="reviews section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-padding', settings: section.settings %}"
>
  {%- comment -%} Section Header {%- endcomment -%}
  <div class="reviews__header">
    {% if section.settings.heading != blank %}
      <h2 class="reviews__heading">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="reviews__overall-stars" aria-label="4.9 out of 5 stars">
      <span class="reviews__stars-icons">★★★★★</span>
      <span class="reviews__rating-text">4.9 out of 5</span>
    </div>
  </div>

  {%- comment -%} JudgeMe Medals — JS populates this container automatically {%- endcomment -%}
  <div class="reviews__medals">
    <div class="jdgm-medal-page" data-shop-domain="gianthoodies.com"></div>
  </div>

  {%- comment -%} Review Cards Grid {%- endcomment -%}
  {% if section.blocks.size > 0 %}
    <div class="reviews__grid">
      {% for block in section.blocks %}
        <div class="reviews__card" {{ block.shopify_attributes }}>
          {% if block.settings.photo != blank %}
            <div class="reviews__card-photo">
              {{ block.settings.photo | image_url: width: 400 | image_tag: class: 'reviews__card-img', alt: block.settings.author, loading: 'lazy' }}
            </div>
          {% endif %}
          <div class="reviews__card-content">
            <div class="reviews__card-stars" aria-label="5 out of 5 stars">★★★★★</div>
            {% if block.settings.title != blank %}
              <h3 class="reviews__card-title">{{ block.settings.title }}</h3>
            {% endif %}
            <p class="reviews__card-text">{{ block.settings.body }}</p>
            <div class="reviews__card-footer">
              <span class="reviews__card-author">{{ block.settings.author }}</span>
              {% if block.settings.verified %}
                <span class="reviews__card-verified">✓ Verified Buyer</span>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>

{% stylesheet %}
  .reviews {
    text-align: center;
    padding-inline: 20px;
    content-visibility: auto;
    contain-intrinsic-size: auto 600px;
  }

  /* ---- JudgeMe Medals ---- */
  .reviews__medals {
    display: flex;
    justify-content: center;
    margin-bottom: 40px;
    contain: layout style paint;
  }

  /* ---- Section Header ---- */
  .reviews__header {
    margin-bottom: 48px;
  }

  .reviews__heading {
    font-family: var(--gh-font-heading, 'Fraunces', serif);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 900;
    font-variation-settings: 'SOFT' 100, 'WONK' 1;
    color: var(--gh-espresso, #3d3028);
    margin-bottom: 16px;
    line-height: 1.1;
  }

  .reviews__overall-stars {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 4px;
  }

  .reviews__stars-icons {
    color: var(--gh-terracotta, #c4704b);
    font-size: 1.5rem;
    letter-spacing: 2px;
    line-height: 1;
  }

  .reviews__rating-text {
    font-family: var(--gh-font-body, 'DM Sans', sans-serif);
    font-size: 1rem;
    color: var(--gh-espresso-light, #5a4a3d);
    margin-left: 8px;
  }

  /* ---- Review Cards Grid ---- */
  .reviews__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
    text-align: left;
  }

  .reviews__card {
    background: var(--gh-cream, #faf7f4);
    border: 1px solid var(--gh-sand, #e8d5c4);
    border-radius: 16px;
    overflow: clip;
    display: flex;
    flex-direction: column;
  }

  .reviews__card-photo {
    aspect-ratio: 4 / 3;
    overflow: clip;
  }

  .reviews__card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .reviews__card-content {
    padding: 20px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .reviews__card-stars {
    color: var(--gh-terracotta, #c4704b);
    font-size: 0.875rem;
    letter-spacing: 1px;
    line-height: 1;
    margin-bottom: 12px;
  }

  .reviews__card-title {
    font-family: var(--gh-font-body, 'DM Sans', sans-serif);
    font-size: 1rem;
    font-weight: 700;
    color: var(--gh-espresso, #3d3028);
    margin-bottom: 8px;
    line-height: 1.3;
  }

  .reviews__card-text {
    font-family: var(--gh-font-body, 'DM Sans', sans-serif);
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--gh-espresso, #3d3028);
    opacity: 0.85;
    margin-bottom: 16px;
    flex-grow: 1;
  }

  .reviews__card-footer {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  .reviews__card-author {
    font-family: var(--gh-font-body, 'DM Sans', sans-serif);
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--gh-espresso, #3d3028);
  }

  .reviews__card-verified {
    font-family: var(--gh-font-body, 'DM Sans', sans-serif);
    font-size: 0.75rem;
    color: #2d5016;
    font-weight: 600;
  }

  /* ---- Tablet ---- */
  @media screen and (max-width: 989px) {
    .reviews__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* ---- Mobile ---- */
  @media screen and (max-width: 749px) {
    .reviews__medals {
      margin-bottom: 24px;
    }

    .reviews__header {
      margin-bottom: 32px;
    }

    .reviews__grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .reviews__card-content {
      padding: 16px;
    }

    .reviews__card-text {
      font-size: 0.875rem;
    }
  }
{% endstylesheet %}

