<section
  id="StatsBar-{{ section.id }}"
  class="stats-bar"
>
  <div class="stats-bar__container page-width">
    {%- for block in section.blocks -%}
      <div class="stats-bar__item" {{ block.shopify_attributes }}>
        <span class="stats-bar__number">{{ block.settings.number }}</span>
        <span class="stats-bar__label">{{ block.settings.label }}</span>
      </div>
      {%- unless forloop.last -%}
        <span class="stats-bar__divider" aria-hidden="true"></span>
      {%- endunless -%}
    {%- endfor -%}
  </div>
</section>

{% stylesheet %}
  .stats-bar {
    background-color: var(--color-espresso);
    padding: 20px 0;
  }

  .stats-bar__container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
  }

  .stats-bar__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    flex: 1;
    padding: 0.5rem 1rem;
  }

  .stats-bar__number {
    font-family: var(--gh-font-heading, 'Fraunces', serif);
    font-weight: 900;
    font-variation-settings: 'SOFT' 100, 'WONK' 1;
    color: var(--color-terracotta);
    font-size: clamp(1.5rem, 3.5vw, 2.5rem);
    line-height: 1.1;
  }

  .stats-bar__label {
    font-family: var(--gh-font-body, 'DM Sans', sans-serif);
    font-weight: 500;
    color: var(--color-cream);
    opacity: 0.85;
    font-size: clamp(0.6875rem, 1.2vw, 0.875rem);
    line-height: 1.4;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    margin-top: 0.35rem;
  }

  .stats-bar__divider {
    width: 1px;
    height: 3rem;
    background-color: rgba(250, 247, 244, 0.2);
    flex-shrink: 0;
  }

  /* ---- Mobile ---- */

  @media screen and (max-width: 749px) {
    .stats-bar {
      padding: 16px 0;
    }

    .stats-bar__item {
      padding: 0.25rem 0.5rem;
    }

    .stats-bar__divider {
      height: 2.25rem;
    }
  }
{% endstylesheet %}

