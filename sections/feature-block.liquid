{% comment %} Giant Hoodies Feature Block - Reusable for Oversized/Trendy/Guarantee {% endcomment %}

<div
  class="feature-block feature-block--media-{{ section.settings.media_position }} section section--full-width color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-padding', settings: section.settings %}"
>
  <div class="feature-block__container">
    <div class="feature-block__media">
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 1200 | image_tag:
          alt: section.settings.heading,
          class: 'feature-block__img',
          sizes: '(min-width: 750px) 50vw, 100vw',
          widths: '400, 600, 800, 1000, 1200'
        }}
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'feature-block__placeholder' }}
      {% endif %}
    </div>

    <div class="feature-block__content">
      {% if section.settings.eyebrow != blank %}
        <p class="feature-block__eyebrow">{{ section.settings.eyebrow }}</p>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="feature-block__heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.body != blank %}
        <p class="feature-block__body">{{ section.settings.body }}</p>
      {% endif %}

      {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
        <a href="{{ section.settings.cta_link }}" class="feature-block__cta button button-primary">
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% stylesheet %}
  .feature-block {
    overflow: hidden;
  }

  .feature-block__container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 600px;
  }

  .feature-block--media-left .feature-block__media {
    order: 1;
  }

  .feature-block--media-left .feature-block__content {
    order: 2;
  }

  .feature-block--media-right .feature-block__media {
    order: 2;
  }

  .feature-block--media-right .feature-block__content {
    order: 1;
  }

  .feature-block__media {
    position: relative;
    overflow: hidden;
  }

  .feature-block__img,
  .feature-block__placeholder {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .feature-block__placeholder {
    background: var(--color-background);
  }

  .feature-block__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 60px 80px;
  }

  .feature-block__eyebrow {
    font-family: var(--gh-font-body);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--gh-terracotta);
    margin-bottom: 16px;
  }

  .feature-block__heading {
    font-family: var(--gh-font-heading);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 600;
    line-height: 1.1;
    margin-bottom: 24px;
    color: var(--color-foreground);
  }

  .feature-block__body {
    font-family: var(--gh-font-body);
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-foreground);
    opacity: 0.85;
    margin-bottom: 32px;
    max-width: 480px;
  }

  .feature-block__cta {
    align-self: flex-start;
  }

  @media screen and (max-width: 989px) {
    .feature-block__container {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .feature-block__media {
      order: 1 !important;
      aspect-ratio: 4 / 3;
      position: relative;
    }

    .feature-block__content {
      order: 2 !important;
      padding: 48px 24px;
    }

    .feature-block__body {
      max-width: 100%;
    }
  }

  @media screen and (max-width: 749px) {
    .feature-block__media {
      aspect-ratio: 1 / 1;
    }

    .feature-block__content {
      padding: 40px 20px;
    }

    .feature-block__eyebrow {
      font-size: 0.75rem;
    }

    .feature-block__body {
      font-size: 1rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Feature Block",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "One Size Fits Most"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "OVERSIZED"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body text",
      "default": "Imagine slipping into your new favorite hoodie after a long day. Wrap yourself in a cozy hug, sink into the plush fabric, and forget about the stresses of today."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button text",
      "default": "Shop All Hoodies"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "media_position",
      "label": "Media position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "right"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-2"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Feature Block"
    }
  ]
}
{% endschema %}
