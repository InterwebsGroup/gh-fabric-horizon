{% comment %} Giant Hoodies Value Props - "What's a Giant Hoodie?!" {% endcomment %}

<div
  class="value-props section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-padding', settings: section.settings %}"
>
  {% if section.settings.heading != blank %}
    <h2 class="value-props__heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="value-props__grid">
    <div class="value-props__item">
      <div class="value-props__icon">
        {% render 'icon', icon: 'shirt' %}
      </div>
      <h3 class="value-props__title">Oversized</h3>
      <p class="value-props__desc">One size fits most â€” it's a wearable blanket, not a fitted shirt.</p>
    </div>

    <div class="value-props__item">
      <div class="value-props__icon">
        {% render 'icon', icon: 'fire' %}
      </div>
      <h3 class="value-props__title">Trendy</h3>
      <p class="value-props__desc">Look effortlessly cool at home or out and about.</p>
    </div>

    <div class="value-props__item">
      <div class="value-props__icon">
        {% render 'icon', icon: 'check_box' %}
      </div>
      <h3 class="value-props__title">Guaranteed</h3>
      <p class="value-props__desc">30-day "Best Hoodie Ever" guarantee. You'll love it.</p>
    </div>

    <div class="value-props__item">
      <div class="value-props__icon">
        {% render 'icon', icon: 'truck' %}
      </div>
      <h3 class="value-props__title">Free Shipping</h3>
      <p class="value-props__desc">Free on US orders $75+. Lightning fast from Arkansas.</p>
    </div>
  </div>
</div>

{% stylesheet %}
  .value-props {
    text-align: center;
  }

  .value-props__heading {
    font-family: var(--gh-font-heading);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    margin-bottom: 48px;
    color: var(--color-foreground);
  }

  .value-props__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 32px;
  }

  .value-props__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .value-props__icon {
    width: 48px;
    height: 48px;
    margin-bottom: 16px;
    color: var(--gh-terracotta);
  }

  .value-props__icon svg {
    width: 100%;
    height: 100%;
  }

  .value-props__title {
    font-family: var(--gh-font-heading);
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--color-foreground);
  }

  .value-props__desc {
    font-family: var(--gh-font-body);
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--color-foreground);
    opacity: 0.8;
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    .value-props__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 40px 24px;
    }
  }

  @media screen and (max-width: 749px) {
    .value-props__heading {
      margin-bottom: 32px;
    }

    .value-props__grid {
      gap: 32px 16px;
    }

    .value-props__icon {
      width: 40px;
      height: 40px;
    }

    .value-props__title {
      font-size: 1.125rem;
    }

    .value-props__desc {
      font-size: 0.875rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Value Props",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What's a Giant Hoodie?!"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        { "value": "page-width", "label": "Page width" },
        { "value": "full-width", "label": "Full width" }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Value Props"
    }
  ]
}
{% endschema %}
