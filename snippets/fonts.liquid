{% # theme-check-disable %}

{% comment %}
  Self-hosted fonts for Giant Hoodies
  - DM Sans (body text): 400, 500, 600, 700
  - Fraunces (headings): variable font (weight 100-900, axes: SOFT, WONK, opsz)
{% endcomment %}

<style>
  /* DM Sans - Body Font */
  @font-face {
    font-family: 'DM Sans';
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url('{{ "dm-sans-400.woff2" | asset_url }}') format('woff2');
  }
  @font-face {
    font-family: 'DM Sans';
    font-style: normal;
    font-weight: 500;
    font-display: swap;
    src: url('{{ "dm-sans-500.woff2" | asset_url }}') format('woff2');
  }
  @font-face {
    font-family: 'DM Sans';
    font-style: normal;
    font-weight: 600;
    font-display: swap;
    src: url('{{ "dm-sans-600.woff2" | asset_url }}') format('woff2');
  }
  @font-face {
    font-family: 'DM Sans';
    font-style: normal;
    font-weight: 700;
    font-display: swap;
    src: url('{{ "dm-sans-700.woff2" | asset_url }}') format('woff2');
  }

  /* Fraunces - Heading Font (Variable) */
  @font-face {
    font-family: 'Fraunces';
    font-style: normal;
    font-weight: 100 900;
    font-display: swap;
    src: url('{{ "fraunces-variable.woff2" | asset_url }}') format('woff2');
  }
</style>

{% comment %} Preload critical fonts for faster rendering {% endcomment %}
<link
  rel="preload"
  as="font"
  href="{{ 'dm-sans-400.woff2' | asset_url }}"
  type="font/woff2"
  crossorigin
>
<link
  rel="preload"
  as="font"
  href="{{ 'fraunces-variable.woff2' | asset_url }}"
  type="font/woff2"
  crossorigin
>

{% # theme-check-enable %}
