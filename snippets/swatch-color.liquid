{%- comment -%}
  Maps a handleized color name to a CSS color value.
  First checks settings.color_swatch_list textarea, then falls back to hardcoded defaults.
  Usage: {% render 'swatch-color', swatch_name: 'royal-purple' %}
{%- endcomment -%}
{%- liquid
  assign found_color = nil

  if settings.color_swatch_list != blank
    assign swatch_lines = settings.color_swatch_list | newline_to_br | split: '<br />'
    for line in swatch_lines
      assign stripped = line | strip
      if stripped == blank
        continue
      endif
      assign parts = stripped | split: ':'
      if parts.size >= 2
        assign line_name = parts[0] | strip | handleize
        if line_name == swatch_name
          assign found_color = parts[1] | strip
          break
        endif
      endif
    endfor
  endif
-%}
{%- if found_color -%}{{ found_color }}
{%- else -%}
