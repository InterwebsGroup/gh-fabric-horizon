{% comment %}
  Giant Hoodies Collection Page Styles
  - 4-col desktop, 2-col mobile grid
  - 3px mobile gap, 20px desktop gap
  - GRADIENT OVERLAY product cards (info on image)
  - 20px border radius
{% endcomment %}

{% style %}
  /* ============================================
     GRID LAYOUT
     ============================================ */

  /* Mobile gap - 8px for visual separation between varied backgrounds */
  @media screen and (max-width: 749px) {
    .product-grid {
      --product-grid-gap-mobile: 8px 8px;
    }
  }

  /* ============================================
     PRODUCT CARD - GRADIENT OVERLAY STYLE
     Per visual spec: info overlaid on image
     ============================================ */

  /* Card container - relative positioning for overlay */
  .product-grid product-card {
    position: relative;
  }

  .product-grid .product-card__content {
    position: relative;
  }

  /* Image gallery - fills card, rounded corners */
  .product-grid .card-gallery {
    aspect-ratio: 4 / 5;
    border-radius: 20px;
    overflow: hidden;
  }

  /* Info overlay - positioned at bottom of image */
  .product-grid .product-card__content > .group-block {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    padding: 50px 16px 16px;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.7) 30%,
      rgba(0, 0, 0, 0.4) 60%,
      rgba(0, 0, 0, 0) 100%
    );
    border-radius: 0 0 20px 20px;
    pointer-events: none;
  }

  /* Make clickable elements work through overlay */
  .product-grid .product-card__content > .group-block a,
  .product-grid .product-card__content > .group-block button,
  .product-grid .product-card__content > .group-block input,
  .product-grid .product-card__content > .group-block label {
    pointer-events: auto;
  }

  /* ============================================
     TEXT ON GRADIENT - WHITE FOR CONTRAST
     ============================================ */

  /* Title - white bold with subtle text shadow */
  .product-grid product-title,
  .product-grid product-title a {
    color: #ffffff !important;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.8);
    font-size: 0.95rem;
    font-weight: 700;
  }

  /* Current price - white, bold */
  .product-grid product-price .price {
    color: #ffffff !important;
    font-weight: 700;
    font-size: 1rem;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }

  /* Compare-at price - white with strikethrough */
  .product-grid product-price .compare-at-price {
    color: rgba(255, 255, 255, 0.85) !important;
    opacity: 1 !important;
    text-decoration: line-through;
    font-size: 0.9rem;
    margin-right: 8px;
    font-weight: 400;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.4);
  }

  /* Savings badge - red background, positioned nicely */
  .product-grid product-price .price-savings {
    display: inline-block;
    background: #e53935;
    color: #ffffff !important;
    font-size: 0.65rem;
    font-weight: 600;
    padding: 3px 6px;
    border-radius: 4px;
    margin-left: 6px;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    vertical-align: middle;
    text-shadow: none;
  }

  /* Hide tiered pricing note - redundant with savings badge */
  .product-grid .gh-tiered-pricing-note {
    display: none;
  }

  /* ============================================
     SWATCHES ON OVERLAY
     ============================================ */

  /* Limit swatches container width for consistent overflow */
  .product-grid product-swatches {
    max-width: 160px;
  }

  /* Swatch sizing - white border for visibility on dark gradient */
  .product-grid .swatch {
    width: 22px;
    height: 22px;
    border: 2px solid rgba(255, 255, 255, 0.6);
    border-radius: 50%;
  }

  .product-grid .swatch:hover {
    border-color: #ffffff;
  }

  /* "+X" overflow count - light text */
  .product-grid .hidden-swatches__count {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.8rem;
    font-weight: 500;
  }

  /* ============================================
     MOBILE ADJUSTMENTS
     ============================================ */
  @media screen and (max-width: 749px) {
    /* Smaller padding on mobile overlay */
    .product-grid .product-card__content > .group-block {
      padding: 30px 10px 10px;
    }

    .product-grid product-title,
    .product-grid product-title a {
      font-size: 0.8rem;
      font-weight: 700;
    }

    .product-grid product-price .price {
      font-size: 0.9rem;
    }

    .product-grid product-price .compare-at-price {
      font-size: 0.8rem;
      margin-right: 4px;
    }

    .product-grid product-price .price-savings {
      font-size: 0.55rem;
      padding: 2px 4px;
      margin-left: 4px;
    }

    /* Smaller swatches on mobile */
    .product-grid product-swatches {
      max-width: 120px;
    }

    .product-grid .swatch {
      width: 16px;
      height: 16px;
      border-width: 1.5px;
    }

    /* Smaller border radius on mobile for tighter grid */
    .product-grid .card-gallery {
      border-radius: 12px;
    }

    .product-grid .product-card__content > .group-block {
      border-radius: 0 0 12px 12px;
    }
  }

  /* ============================================
     BADGE POSITIONING
     ============================================ */

  /* Quick add button - top right */
  .product-grid .quick-add {
    position: absolute;
    top: 12px;
    right: 12px;
    z-index: 3;
  }

  /* Product badges - top left */
  .product-grid .product-badge {
    position: absolute;
    top: 12px;
    left: 12px;
    z-index: 3;
  }
{% endstyle %}
