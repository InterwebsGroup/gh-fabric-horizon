{% comment %}
  Giant Hoodies Collection Page Styles
  - 4-col desktop, 2-col mobile grid
  - 3px mobile gap, 20px desktop gap
  - 16px border radius on images
{% endcomment %}

{% style %}
  /* Giant Hoodies Collection Grid - Mobile gap override (3px instead of 12px cap) */
  @media screen and (max-width: 749px) {
    .product-grid {
      --product-grid-gap-mobile: 3px 3px;
    }
  }

  /* Product card border radius on images */
  .product-grid .card-gallery {
    border-radius: 16px;
    overflow: hidden;
  }

  /* ============================================
     PRICE STYLING - Espresso color scheme
     ============================================ */

  /* Current price - Espresso color, bold */
  .product-grid product-price .price {
    color: #3d3028 !important;
    font-weight: 700;
    font-size: 1.125rem;
  }

  /* Compare-at price - visible strikethrough */
  .product-grid product-price .compare-at-price {
    color: #6b5e52 !important;
    opacity: 1 !important;
    text-decoration: line-through;
    font-size: 0.95rem;
    margin-right: 8px;
    font-weight: 400;
  }

  /* Savings badge - red background */
  .product-grid product-price .price-savings {
    display: inline-block;
    background: #e53935;
    color: #ffffff !important;
    font-size: 0.7rem;
    font-weight: 600;
    padding: 3px 8px;
    border-radius: 4px;
    margin-left: 8px;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    vertical-align: middle;
  }

  /* Hide tiered pricing note - redundant with savings badge */
  .product-grid .gh-tiered-pricing-note {
    display: none;
  }

  /* ============================================
     SWATCH STYLING - Consistent display
     ============================================ */

  /* Limit swatches container width for consistent overflow */
  .product-grid product-swatches {
    max-width: 180px;
  }

  /* Swatch sizing and borders */
  .product-grid .swatch {
    width: 24px;
    height: 24px;
    border: 2px solid rgba(0, 0, 0, 0.15);
    border-radius: 50%;
  }

  .product-grid .swatch:hover {
    border-color: #3d3028;
  }

  /* "+X" overflow count styling */
  .product-grid .hidden-swatches__count {
    color: #6b5e52;
    font-size: 0.85rem;
    font-weight: 500;
  }

  /* ============================================
     MOBILE ADJUSTMENTS
     ============================================ */
  @media screen and (max-width: 749px) {
    .product-grid product-title {
      font-size: 0.875rem;
    }

    .product-grid product-price {
      font-size: 0.875rem;
    }

    .product-grid product-price .price {
      font-size: 1rem;
    }

    .product-grid product-price .compare-at-price {
      font-size: 0.85rem;
      margin-right: 6px;
    }

    .product-grid product-price .price-savings {
      font-size: 0.6rem;
      padding: 2px 5px;
      margin-left: 5px;
    }

    /* Smaller swatches on mobile */
    .product-grid product-swatches {
      max-width: 140px;
    }

    .product-grid .swatch {
      width: 18px;
      height: 18px;
    }
  }

  /* Card gallery aspect ratio */
  .product-grid .card-gallery {
    aspect-ratio: 4 / 5;
  }
{% endstyle %}
