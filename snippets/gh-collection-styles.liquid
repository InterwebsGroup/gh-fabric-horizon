{% comment %}
  Giant Hoodies Collection Page Styles
  - 4-col desktop, 2-col mobile grid
  - Info below image (title, price, swatches under card gallery)
  - Pagination dots inside image
  - 20px border radius on desktop, 0 on mobile
{% endcomment %}

{% style %}
  /* ============================================
     GIANT HOODIES DESIGN SYSTEM - COLOR VARIABLES
     ============================================ */
  :root {
    /* Brand Colors */
    --color-white: #ffffff;
    --color-black: #000000;
    --color-terracotta: #c75d38;
    --color-espresso: #3d3028;
    --color-cream: #faf7f4;
    --color-sand: #e8e0d5;

    /* Semantic Colors */
    --color-sale: #e53935;
    --color-success: #2d5016;
    --color-success-light: #3d6b1f;
  }

  /* ============================================
     SECTION SPACING - TIGHTER VERTICAL RHYTHM
     ============================================ */

  /* Volume pricing banner - reduce bottom margin */
  .volume-pricing-banner-section {
    margin-bottom: 0;
  }

  /* Collection header/title - tighter spacing */
  .collection-wrapper {
    --gap-style: 8px;
  }

  /* Collection title - reduce whitespace */
  .collection-title,
  .collection-header,
  .collection-hero__title {
    margin-bottom: 8px !important;
    padding-bottom: 0 !important;
  }

  /* Facets/filters bar - reduce vertical padding */
  .facets--horizontal {
    padding-block: 8px !important;
  }

  .facets-block-wrapper {
    margin-bottom: 4px;
  }

  /* Mobile filter toggle - tighter */
  .facets-toggle {
    padding-block: 8px !important;
    min-height: auto !important;
    height: auto !important;
  }

  /* Reduce space above product grid */
  .main-collection-grid {
    margin-top: 0;
    padding-top: 0 !important;
  }

  /* Tighter spacing from filter bar to grid */
  .product-grid-container {
    --padding-block-start: 0 !important;
  }

  /* ============================================
     GRID LAYOUT - MOBILE CARD GAPS
     Desktop gap is set via template settings (10px)
     ============================================ */

  /* Mobile gap - vertical spacing for text area between cards */
  @media screen and (max-width: 749px) {
    .product-grid {
      --product-grid-gap: 16px 6px !important;
    }
  }

  /* ============================================
     FILTER BAR STYLING
     ============================================ */

  /* Style filter dropdowns to look more clickable */
  .facets__list-filter-toggle,
  .facets .disclosure__toggle,
  .sorting .disclosure__toggle {
    background-color: rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.12);
    border-radius: 8px;
    padding: 8px 12px;
    transition: all 0.2s ease;
  }

  .facets__list-filter-toggle:hover,
  .facets .disclosure__toggle:hover,
  .sorting .disclosure__toggle:hover {
    background-color: rgba(0, 0, 0, 0.08);
    border-color: rgba(0, 0, 0, 0.2);
  }

  /* "More filters" button styling */
  .facets__overflow-list [part="more"] button {
    background-color: rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.12);
    border-radius: 8px;
    padding: 8px 12px;
  }

  .facets__overflow-list [part="more"] button:hover {
    background-color: rgba(0, 0, 0, 0.08);
    border-color: rgba(0, 0, 0, 0.2);
  }

  /* ============================================
     MOBILE FILTER/SORT BAR - CONSISTENT STYLING
     Make "Filter" and "Featured" look the same
     ============================================ */
  @media screen and (max-width: 749px) {
    /* Filter button - match text styling */
    .facets-toggle__button {
      font-size: 0.875rem !important;
      font-weight: 500 !important;
      color: var(--color-foreground) !important;
      text-transform: none;
    }

    .facets-toggle__button .svg-wrapper {
      width: 16px;
      height: 16px;
    }

    /* Sort dropdown - match filter button styling */
    .facets-mobile-wrapper .sorting .disclosure__toggle,
    .facets-mobile-wrapper .facets__panel .facets__summary {
      font-size: 0.875rem !important;
      font-weight: 500 !important;
      color: var(--color-foreground) !important;
      background: transparent !important;
      border: none !important;
      padding: 0 !important;
    }

    /* Both should have same icon size */
    .facets-mobile-wrapper .sorting .disclosure__toggle .svg-wrapper,
    .facets-mobile-wrapper .sorting .disclosure__toggle .icon-caret {
      width: 14px;
      height: 14px;
    }

    /* Remove extra styling differences */
    .facets-toggle,
    .facets-mobile-wrapper {
      font-size: 0.875rem;
    }
  }

  /* ============================================
     PRODUCT CARD - INFO BELOW IMAGE
     Title, price, swatches sit below the image
     ============================================ */

  /* Card container - relative positioning */
  .product-grid product-card {
    position: relative;
  }

  .product-grid .product-card__content {
    position: relative;
    overflow: visible !important;
  }

  /* Image gallery - rounded corners, fixed aspect ratio */
  .product-grid .card-gallery {
    position: relative;
    aspect-ratio: 4 / 5;
    border-radius: 20px;
    overflow: hidden;
  }

  /* Info block - static flow below image */
  .product-grid .product-card__content > .group-block {
    position: static;
    padding: 12px 4px 4px;
    background: none;
    pointer-events: auto;
  }

  /* ============================================
     TEXT BELOW IMAGE - DARK ON LIGHT BACKGROUND
     ============================================ */

  /* Title - espresso, bold, max 2 lines */
  /* Override inline --color CSS variable and target dynamic class names */
  .product-grid .text-block[class*="product_title"],
  .product-grid .text-block[class*="product_title"] p,
  .product-grid .text-block[class*="product_title"] span,
  .product-grid product-title,
  .product-grid product-title a,
  .product-grid product-title .text-block,
  .product-grid product-title .text-block p {
    --color: var(--gh-espresso, #3d3028) !important;
    color: var(--gh-espresso, #3d3028) !important;
    text-shadow: none !important;
    font-size: 1.1rem !important;
    font-weight: 700 !important;
    line-height: 1.3 !important;
  }

  /* Clamp title text to 2 lines with ellipsis */
  .product-grid .text-block[class*="product_title"] p,
  .product-grid product-title .text-block p {
    display: -webkit-box !important;
    -webkit-line-clamp: 2 !important;
    -webkit-box-orient: vertical !important;
    overflow: hidden !important;
    text-overflow: ellipsis !important;
  }

  /* Current price - espresso, bold, larger */
  .product-grid product-price .price {
    color: var(--gh-espresso, #3d3028) !important;
    font-weight: 700;
    font-size: 1.15rem;
    text-shadow: none;
  }

  /* Compare-at price - espresso muted with strikethrough */
  .product-grid product-price .compare-at-price {
    color: var(--gh-espresso-light, #5a4a3d) !important;
    opacity: 0.6 !important;
    text-decoration: line-through;
    font-size: 1.1rem;
    margin-right: 8px;
    font-weight: 500;
    text-shadow: none;
  }

  /* Savings badge - red background, positioned nicely */
  .product-grid product-price .price-savings {
    display: inline-block;
    background: var(--gh-terracotta, #c4704b);
    color: var(--color-white) !important;
    font-size: 0.8rem;
    font-weight: 700;
    padding: 4px 10px;
    border-radius: 9999px;
    margin-left: 8px;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    vertical-align: middle;
    text-shadow: none;
  }

  /* Hide tiered pricing note - redundant with savings badge */
  .product-grid .gh-tiered-pricing-note {
    display: none;
  }

  /* ============================================
     SWATCHES BELOW IMAGE
     ============================================ */

  /* Reset fieldset defaults so swatches lay out cleanly */
  .product-grid .variant-option--swatches {
    border: 0;
    margin: 0;
    padding: 0;
    min-inline-size: 0;
  }

  /* Let overflow-list fill available card width */
  .product-grid product-swatches {
    display: flex;
    max-width: 100%;
  }

  /* Swatch sizing - espresso border for visibility on light background */
  .product-grid .swatch {
    display: block;
    width: 20px;
    height: 20px;
    min-width: 20px;
    min-height: 20px;
    border: 2px solid rgba(61, 48, 40, 0.25);
    border-radius: 50%;
    background: var(--swatch-background, var(--custom-swatch-color, #ccc));
  }

  /* Tighter gap between swatches */
  .product-grid .variant-option--swatches overflow-list::part(list) {
    gap: 4px;
  }

  .product-grid .swatch:hover {
    border-color: var(--gh-espresso, #3d3028);
  }

  /* "+X" overflow count - dark text */
  .product-grid .hidden-swatches__count {
    color: var(--gh-espresso-light, #5a4a3d);
    font-size: 0.75rem;
    font-weight: 500;
    white-space: nowrap;
  }

  /* ============================================
     MOBILE ADJUSTMENTS
     ============================================ */
  @media screen and (max-width: 749px) {
    /* Info block below image - tighter padding on mobile */
    .product-grid .product-card__content > .group-block {
      padding: 8px 6px 0;
    }

    .product-grid .text-block[class*="product_title"],
    .product-grid .text-block[class*="product_title"] p,
    .product-grid .text-block[class*="product_title"] span,
    .product-grid product-title,
    .product-grid product-title a,
    .product-grid product-title .text-block,
    .product-grid product-title .text-block p {
      font-size: 0.9rem !important;
      font-weight: 700 !important;
    }

    .product-grid product-price .price {
      font-size: 0.95rem;
    }

    .product-grid product-price .compare-at-price {
      font-size: 0.9rem;
      margin-right: 4px;
    }

    .product-grid product-price .price-savings {
      font-size: 0.7rem;
      padding: 3px 8px;
      margin-left: 6px;
    }

    /* Smaller swatches on mobile - fit more in available width */
    .product-grid product-swatches {
      max-width: 100%;
    }

    .product-grid .swatch {
      width: 14px;
      height: 14px;
      min-width: 14px;
      min-height: 14px;
      border-width: 1.5px;
    }

    /* No border radius on mobile - edge-to-edge image */
    .product-grid .card-gallery {
      border-radius: 0;
    }

    /* Dots at bottom on mobile too */
    .product-grid .gallery-pagination-dots {
      bottom: 10px;
    }
  }

  /* ============================================
     BADGE POSITIONING
     ============================================ */

  /* Quick add button - constrained to image area */
  .product-grid .quick-add {
    position: absolute;
    top: 0;
    right: 0;
    bottom: auto;
    left: auto;
    width: 100%;
    aspect-ratio: 4 / 5;
    z-index: 10;
  }

  /* Product badges - top left, above gradient */
  .product-grid .product-badge {
    position: absolute;
    top: 12px;
    left: 12px;
    z-index: 10;
  }

  /* ============================================
     PAGINATION DOTS FOR PRODUCT CARD GALLERY
     Dots are rendered INSIDE card-gallery
     ============================================ */

  /* Dots container - at bottom of image area */
  .product-grid .gallery-pagination-dots {
    position: absolute;
    bottom: 12px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 6px;
    z-index: 1;
    pointer-events: none;
  }

  /* Individual dot styling */
  .product-grid .gallery-pagination-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: #ffffff;
    opacity: 0.4;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    transition: opacity 0.2s ease, width 0.15s ease, height 0.15s ease;
  }

  /* Active dot - full opacity */
  .product-grid .gallery-pagination-dot.active {
    opacity: 1;
  }

  /* Progressive dots - smaller edge dots indicate more content */
  .product-grid .gallery-pagination-dot.dot-small {
    width: 4px;
    height: 4px;
    opacity: 0.3;
  }

  .product-grid .gallery-pagination-dot.dot-small.active {
    opacity: 0.8;
  }

  /* Hide dots when only 1 image - dots are inside card-gallery */
  .product-grid .card-gallery[data-slide-count="1"] .gallery-pagination-dots,
  .product-grid .card-gallery[data-slide-count="0"] .gallery-pagination-dots {
    display: none;
  }

{% endstyle %}
