{% comment %}
  Giant Hoodies Collection Page Styles
  - Collection-specific layout: section spacing, filter bar, grid gaps
  - Product card styles are loaded via gh-product-card-styles
{% endcomment %}

{% render 'gh-product-card-styles' %}

{% style %}
  /* ============================================
     SECTION SPACING - TIGHTER VERTICAL RHYTHM
     ============================================ */

  /* Volume pricing banner - reduce bottom margin */
  .volume-pricing-banner-section {
    margin-bottom: 0;
  }

  /* Collection header/title - tighter spacing */
  .collection-wrapper {
    --gap-style: 8px;
  }

  /* Collection title - reduce whitespace */
  .collection-title,
  .collection-header,
  .collection-hero__title {
    margin-bottom: 8px;
    padding-bottom: 0;
  }

  /* Facets/filters bar - reduce vertical padding */
  .facets--horizontal {
    padding-block: 8px;
  }

  .facets-block-wrapper {
    margin-bottom: 4px;
  }

  /* Mobile filter toggle - tighter */
  .facets-toggle {
    padding-block: 8px;
    min-height: auto;
    height: auto;
  }

  /* Reduce space above product grid */
  .main-collection-grid {
    margin-top: 0;
    padding-top: 0;
  }

  /* Tighter spacing from filter bar to grid */
  .product-grid-container {
    padding-block-start: 0;
  }

  /* ============================================
     GRID LAYOUT - MOBILE CARD GAPS
     Desktop gap is set via template settings (10px)
     ============================================ */

  /* Mobile gap - vertical spacing for text area between cards */
  @media screen and (max-width: 749px) {
    .product-grid {
      --product-grid-gap: 16px 6px;
    }
  }

  /* ============================================
     FILTER BAR STYLING
     ============================================ */

  /* Style filter dropdowns to look more clickable */
  .facets__list-filter-toggle,
  .facets .disclosure__toggle,
  .sorting .disclosure__toggle {
    background-color: rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.12);
    border-radius: 8px;
    padding: 8px 12px;
    transition: background-color 0.2s ease, border-color 0.2s ease;
  }

  .facets__list-filter-toggle:hover,
  .facets .disclosure__toggle:hover,
  .sorting .disclosure__toggle:hover {
    background-color: rgba(0, 0, 0, 0.08);
    border-color: rgba(0, 0, 0, 0.2);
  }

  /* "More filters" button styling */
  .facets__overflow-list [part="more"] button {
    background-color: rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.12);
    border-radius: 8px;
    padding: 8px 12px;
  }

  .facets__overflow-list [part="more"] button:hover {
    background-color: rgba(0, 0, 0, 0.08);
    border-color: rgba(0, 0, 0, 0.2);
  }

  /* ============================================
     MOBILE FILTER/SORT BAR - CONSISTENT STYLING
     Make "Filter" and "Featured" look the same
     ============================================ */
  @media screen and (max-width: 749px) {
    /* Filter button - match text styling */
    .facets-toggle__button {
      font-size: 0.875rem;
      font-weight: 500;
      color: var(--color-foreground);
      text-transform: none;
    }

    .facets-toggle__button .svg-wrapper {
      width: 16px;
      height: 16px;
    }

    /* Sort dropdown - match filter button styling */
    .facets-mobile-wrapper .sorting .disclosure__toggle,
    .facets-mobile-wrapper .facets__panel .facets__summary {
      font-size: 0.875rem;
      font-weight: 500;
      color: var(--color-foreground);
      background: transparent;
      border: none;
      padding: 0;
    }

    /* Both should have same icon size */
    .facets-mobile-wrapper .sorting .disclosure__toggle .svg-wrapper,
    .facets-mobile-wrapper .sorting .disclosure__toggle .icon-caret {
      width: 14px;
      height: 14px;
    }

    /* Remove extra styling differences */
    .facets-toggle,
    .facets-mobile-wrapper {
      font-size: 0.875rem;
    }
  }

{% endstyle %}
