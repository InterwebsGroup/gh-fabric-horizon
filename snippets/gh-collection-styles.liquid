{% comment %}
  Giant Hoodies Collection Page Styles
  - 4-col desktop, 2-col mobile grid
  - 0px mobile gap (edge-to-edge), 14px desktop gap
  - GRADIENT OVERLAY product cards (info on image)
  - 20px border radius
{% endcomment %}

{% style %}
  /* ============================================
     GIANT HOODIES DESIGN SYSTEM - COLOR VARIABLES
     ============================================ */
  :root {
    /* Brand Colors */
    --color-white: #ffffff;
    --color-black: #000000;
    --color-terracotta: #c75d38;
    --color-espresso: #3d3028;
    --color-cream: #faf7f4;
    --color-sand: #e8e0d5;

    /* Semantic Colors */
    --color-sale: #e53935;
    --color-success: #2d5016;
    --color-success-light: #3d6b1f;
  }

  /* ============================================
     SECTION SPACING - TIGHTER VERTICAL RHYTHM
     ============================================ */

  /* Volume pricing banner - reduce bottom margin */
  .volume-pricing-banner-section {
    margin-bottom: 0;
  }

  /* Collection header/title - tighter spacing */
  .collection-wrapper {
    --gap-style: 12px;
  }

  /* Facets/filters bar - reduce vertical padding */
  .facets--horizontal {
    padding-block: 12px !important;
  }

  .facets-block-wrapper {
    margin-bottom: 8px;
  }

  /* Reduce space above product grid */
  .main-collection-grid {
    margin-top: 0;
  }

  /* ============================================
     GRID LAYOUT - CARD GAPS
     Override inline styles from product-grid.liquid section settings
     ============================================ */

  /* Desktop gap - 14px for clean structured grid */
  .product-grid {
    --product-grid-gap: 14px 14px !important;
  }

  /* Mobile gap - 0px edge-to-edge for immersive browsing (gradient provides separation) */
  @media screen and (max-width: 749px) {
    .product-grid {
      --product-grid-gap: 0px 0px !important;
    }
  }

  /* ============================================
     FILTER BAR STYLING
     ============================================ */

  /* Style filter dropdowns to look more clickable */
  .facets__list-filter-toggle,
  .facets .disclosure__toggle,
  .sorting .disclosure__toggle {
    background-color: rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.12);
    border-radius: 8px;
    padding: 8px 12px;
    transition: all 0.2s ease;
  }

  .facets__list-filter-toggle:hover,
  .facets .disclosure__toggle:hover,
  .sorting .disclosure__toggle:hover {
    background-color: rgba(0, 0, 0, 0.08);
    border-color: rgba(0, 0, 0, 0.2);
  }

  /* "More filters" button styling */
  .facets__overflow-list [part="more"] button {
    background-color: rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.12);
    border-radius: 8px;
    padding: 8px 12px;
  }

  .facets__overflow-list [part="more"] button:hover {
    background-color: rgba(0, 0, 0, 0.08);
    border-color: rgba(0, 0, 0, 0.2);
  }

  /* ============================================
     PRODUCT CARD - GRADIENT OVERLAY STYLE
     Per visual spec: info overlaid on image
     ============================================ */

  /* Card container - relative positioning for overlay */
  .product-grid product-card {
    position: relative;
  }

  .product-grid .product-card__content {
    position: relative;
  }

  /* Image gallery - fills card, rounded corners */
  .product-grid .card-gallery {
    aspect-ratio: 4 / 5;
    border-radius: 20px;
    overflow: hidden;
  }

  /* Info overlay - positioned at bottom of image */
  .product-grid .product-card__content > .group-block {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    padding: 50px 16px 16px;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.7) 30%,
      rgba(0, 0, 0, 0.4) 60%,
      rgba(0, 0, 0, 0) 100%
    );
    border-radius: 0 0 20px 20px;
    pointer-events: none;
  }

  /* Make clickable elements work through overlay */
  .product-grid .product-card__content > .group-block a,
  .product-grid .product-card__content > .group-block button,
  .product-grid .product-card__content > .group-block input,
  .product-grid .product-card__content > .group-block label {
    pointer-events: auto;
  }

  /* ============================================
     TEXT ON GRADIENT - WHITE FOR CONTRAST
     ============================================ */

  /* Title - white bold with subtle text shadow */
  /* Override inline --color CSS variable and target dynamic class names */
  .product-grid .text-block[class*="product_title"],
  .product-grid .text-block[class*="product_title"] p,
  .product-grid .text-block[class*="product_title"] span,
  .product-grid product-title,
  .product-grid product-title a,
  .product-grid product-title .text-block,
  .product-grid product-title .text-block p {
    --color: var(--color-white) !important;
    color: var(--color-white) !important;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.8) !important;
    font-size: 1.05rem !important;
    font-weight: 700 !important;
  }

  /* Current price - white, bold */
  .product-grid product-price .price {
    color: var(--color-white) !important;
    font-weight: 700;
    font-size: 1rem;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }

  /* Compare-at price - white with strikethrough */
  .product-grid product-price .compare-at-price {
    color: rgba(255, 255, 255, 0.85) !important;
    opacity: 1 !important;
    text-decoration: line-through;
    font-size: 0.9rem;
    margin-right: 8px;
    font-weight: 400;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.4);
  }

  /* Savings badge - red background, positioned nicely */
  .product-grid product-price .price-savings {
    display: inline-block;
    background: var(--color-sale);
    color: var(--color-white) !important;
    font-size: 0.65rem;
    font-weight: 600;
    padding: 3px 6px;
    border-radius: 4px;
    margin-left: 6px;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    vertical-align: middle;
    text-shadow: none;
  }

  /* Hide tiered pricing note - redundant with savings badge */
  .product-grid .gh-tiered-pricing-note {
    display: none;
  }

  /* ============================================
     SWATCHES ON OVERLAY
     ============================================ */

  /* Desktop: Show 6-7 swatches before overflow (wider container) */
  .product-grid product-swatches {
    max-width: 200px;
  }

  /* Swatch sizing - slightly smaller to fit more, white border for visibility */
  .product-grid .swatch {
    width: 20px;
    height: 20px;
    border: 2px solid rgba(255, 255, 255, 0.6);
    border-radius: 50%;
  }

  /* Tighter gap between swatches */
  .product-grid .variant-option--swatches overflow-list::part(list) {
    gap: 4px;
  }

  .product-grid .swatch:hover {
    border-color: var(--color-white);
  }

  /* "+X" overflow count - light text */
  .product-grid .hidden-swatches__count {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.75rem;
    font-weight: 500;
  }

  /* ============================================
     MOBILE ADJUSTMENTS
     ============================================ */
  @media screen and (max-width: 749px) {
    /* Softer gradient on mobile - starts at 40%, max opacity 0.6 */
    .product-grid .product-card__content > .group-block {
      padding: 24px 10px 10px;
      background: linear-gradient(
        to top,
        rgba(0, 0, 0, 0.6) 0%,
        rgba(0, 0, 0, 0.5) 25%,
        rgba(0, 0, 0, 0.25) 40%,
        rgba(0, 0, 0, 0) 100%
      );
    }

    .product-grid .text-block[class*="product_title"],
    .product-grid .text-block[class*="product_title"] p,
    .product-grid .text-block[class*="product_title"] span,
    .product-grid product-title,
    .product-grid product-title a,
    .product-grid product-title .text-block,
    .product-grid product-title .text-block p {
      font-size: 0.875rem !important;
      font-weight: 700 !important;
    }

    .product-grid product-price .price {
      font-size: 0.9rem;
    }

    .product-grid product-price .compare-at-price {
      font-size: 0.8rem;
      margin-right: 4px;
    }

    .product-grid product-price .price-savings {
      font-size: 0.55rem;
      padding: 2px 4px;
      margin-left: 4px;
    }

    /* Smaller swatches on mobile */
    .product-grid product-swatches {
      max-width: 110px;
    }

    .product-grid .swatch {
      width: 14px;
      height: 14px;
      border-width: 1.5px;
    }

    /* No border radius on mobile - edge-to-edge cards */
    .product-grid .card-gallery {
      border-radius: 0;
    }

    .product-grid .product-card__content > .group-block {
      border-radius: 0;
    }
  }

  /* ============================================
     BADGE POSITIONING
     ============================================ */

  /* Quick add button - top right */
  .product-grid .quick-add {
    position: absolute;
    top: 12px;
    right: 12px;
    z-index: 3;
  }

  /* Product badges - top left */
  .product-grid .product-badge {
    position: absolute;
    top: 12px;
    left: 12px;
    z-index: 3;
  }
{% endstyle %}
